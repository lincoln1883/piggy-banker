<% @expenditures.each do |expenditure| %>
    <div class="flex flex-col w-full">
    <!-- card -->
    <div class="flex flex-row overflow-hidden bg-white
      rounded-lg shadow-xl h-40 mt-4 w-100 mx-2" id="expenditure_<%= expenditure.id %>" style="height: 100px">
      <!-- media -->
      <div class="h-full w-auto">
        <%= image_tag @category.icon, alt: 'Category Icon', class: "inset-0 w-full object-cover object-center" if @category.icon.present?%>
      </div>
      <!-- content -->
      <div class="flex flex-col justify-evenly w-full py-4 px-4 text-gray-800">
        <div class="flex justify-between mt-8">
          <p class="font-semibold text-md leading-tight truncate"><%= expenditure.name.capitalize %></p>
          <p class="font-semibold text-md">$ <%= expenditure.amount %>0</p>
        </div>
        <div class="flex justify-between items-center">
          <p class="text-sm text-gray-700 tracking-wide font-semibold mt-2">
            <%= time_ago_in_words(expenditure.created_at) %> ago
          </p>
          <% if can? :delete,expenditure %>
            <%= button_to category_expenditure_path(@category,expenditure.id),method: :delete, class: 'mt-2' do %>
              <i class="fa-solid fa-trash-can"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>