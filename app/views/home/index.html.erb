<div class="min-h-screen py-6 flex flex-col justify-end sm:py-12"
     style="background-image: url(<%= asset_path 'roman-wimmers-9qr4XioEtz4-unsplash.jpg' %>);
       background-size: cover;">
  <div class="relative py-3 sm:max-w-xl sm:mx-auto">
    <div class="relative px-4 py-10 md:shadow-lg sm:rounded-3xl sm:p-20">
      <div class="max-w-md mx-auto" style="height: 400px">
        <div class="divide-y-hidden">
          <h1 class="text-center md:outline-black md:text-white font-bold uppercase italic text-4xl">Piggy Banker</h1>
          <div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7 mt-40">
            <% if user_signed_in? %>
              <div class="flex justify-center items-center w-full">
                <%= button_to 'Log Out', destroy_user_session_path, method: :delete,class: "border border-indigo-900 rounded-lg text-center text-indigo-900 bg-white text-base font-semibold py-4 px-10" %>
              </div>
            <%  else  %>
              <div class="flex">
                <%=  link_to 'Log In', user_session_path, class: "bg-blue-500 rounded-lg shadow text-center text-white text-base font-semibold w-full py-3" %>
              </div>
              <div class="flex">
                <%=  link_to 'Sign Up', new_user_registration_path, class: "border border-blue-600 rounded-lg  text-center text-blue-500 bg-white text-base font-semibold w-full py-3"  %>
              </div>
            <%  end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>